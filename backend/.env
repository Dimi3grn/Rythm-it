# Application
APP_NAME=Rythmit
APP_ENV=development
APP_PORT=8085
APP_VERSION=0.1.0

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=rythmit_db
DB_CHARSET=utf8mb4

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# API Keys (pour les int√©grations futures)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
YOUTUBE_API_KEY=

# Server Configuration
SERVER_READ_TIMEOUT=15
SERVER_WRITE_TIMEOUT=15
SERVER_IDLE_TIMEOUT=60
MAX_UPLOAD_SIZE=10485760  # 10MB en bytes

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Logging
LOG_LEVEL=debug  # debug, info, warn, error
LOG_FORMAT=json  # json ou text

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Security
BCRYPT_COST=12  # Pour le hashing des mots de passe (au lieu de SHA512)
MIN_PASSWORD_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# File Upload
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
MAX_IMAGE_SIZE=5242880  # 5MB

# Cache (Redis - optionnel pour plus tard)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email (pour notifications futures)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@rythmit.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Admin
DEFAULT_ADMIN_EMAIL=admin@rythmit.com
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!